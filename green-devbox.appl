name: green-devbox
summary: Anthony's Nice Hacking Box
version: 8
os:
  name: fedora
  version: 15
hardware:
  partitions:
    "/":
      size: 24
packages:
  - @core
  - ant
  - autoconf
  - automake
  - bison
  - boost-devel
  - ccache
  - createrepo
  - cvs
  - dejagnu
  - diffutils
  - emacs
  - flex
  - gcc
  - gcc-c++
  - gdb
  - gettext
  - git
  - gmp-devel
  - gperf
  - gtkwave
  - iverilog
  - libdaemon-devel
  - libidn-devel
  - libmpc-devel
  - libtool
  - m4
  - mailx
  - make
  - mingw32-filesystem
  - mlocate
  - mock
  - mpfr-devel
  - openssh
  - openssh-clients
  - patch
  - pcre-devel
  - python-devel
  - qt-devel
  - readline-devel
  - rpm-build
  - sbcl
  - screen
  - sqlite-devel
  - subversion
  - tcplay
  - texinfo
  - v8-devel
  - valgrind
  - wget
  - xorg-x11-fonts-ISO8859-14-100dpi
  - xorg-x11-fonts-ISO8859-2-100dpi
  - xorg-x11-fonts-ISO8859-9-100dpi
  - xorg-x11-fonts-100dpi
  - xorg-x11-fonts-ISO8859-15-100dpi
  - xorg-x11-fonts-ISO8859-1-100dpi
  - xorg-x11-server-utils
  - xorg-x11-xauth
  - zlib-devel

post:
  base:
    - "cd /root && git clone git://github.com/atgreen/devbox.git"
    - "cd /root && sh ./devbox/devbox-setup.sh"
