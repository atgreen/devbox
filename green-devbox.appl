name: green-devbox
summary: Anthony's Nice Hacking Box
version: 4
os:
  name: fedora
  version: 15
hardware:
  partitions:
    "/":
      size: 20
packages:
  - @core
  - ant
  - autoconf
  - automake
  - bison
  - ccache
  - createrepo
  - cvs
  - dejagnu
  - diffutils
  - emacs
  - flex
  - gcc
  - gcc-c++
  - gdb
  - git
  - gmp-devel
  - gperf
  - gtkwave
  - iverilog
  - libmpc-devel
  - libtool
  - m4
  - mailx
  - make
  - mingw32-filesystem
  - mock
  - mpfr-devel
  - openssh
  - openssh-clients
  - patch
  - python-devel
  - readline-devel
  - rpm-build
  - sbcl
  - screen
  - subversion
  - tcplay
  - texinfo
  - valgrind
  - wget
  - zlib-devel

post:
  base:
    - "cd /root"
    - "git clone git://github.com/atgreen/devbox.git"
    - "sh ./devbox/devbox-setup.sh"
